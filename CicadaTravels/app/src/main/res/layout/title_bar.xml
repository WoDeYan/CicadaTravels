<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_title_linear_layout_height"
    android:background="#009AE4"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/titleTv"
        android:text="@string/main_title_name"
        android:textSize="@dimen/main_title_text_size"
        android:layout_margin="@dimen/main_title_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/title_search_btn"
            android:layout_weight="1"
            android:layout_margin="@dimen/main_title_search_btn_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/search"

            />
        <Button
            android:id="@+id/title_login_and_register_btn"
            android:layout_weight="1"
            android:layout_margin="@dimen/main_title_login_register_btn_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/person"/>
        <Button
            android:id="@+id/title_assist_btn"
            android:layout_weight="1"
            android:layout_margin="@dimen/main_title_assist_btn_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/menu"/>
    </LinearLayout>

</LinearLayout>
