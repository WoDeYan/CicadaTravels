<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/login_and_register_title_bar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/login_and_register_tab_layout"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_and_register_tab_layout_height"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/login_and_register_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>