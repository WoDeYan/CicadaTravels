<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/travels_whole_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/travels_part_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/travels_whole_iv"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:padding="3dp"
        android:background="@android:color/white"
        />
    <TextView
        android:id="@+id/travels_name_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="1234567"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/travels_start_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="20dp"
        android:text="我让他有"
        android:textColor="@android:color/white"
        android:layout_below="@id/travels_name_tv"/>
    <TextView
        android:id="@+id/travels_days_tv"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/travels_start_date_tv"
        android:layout_below="@id/travels_name_tv"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/travels_photos_count_tv"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/travels_days_tv"
        android:layout_below="@id/travels_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        />




</RelativeLayout>