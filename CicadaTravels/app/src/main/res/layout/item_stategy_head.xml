<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_lv"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/strategy_head_recent_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="最近浏览"
        android:textColor="#ff000000"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/strategy_head_recent_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DFDFDF"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/country1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#d5d5d5"
            android:gravity="center"
            android:padding="5dp"
            android:text="国家1"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/country2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#d5d5d5"
            android:gravity="center"
            android:padding="5dp"
            android:text="国家2"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/country3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#d5d5d5"
            android:gravity="center"
            android:padding="5dp"
            android:text="国家3"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/country4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#d5d5d5"
            android:gravity="center"
            android:padding="5dp"
            android:text="国家4"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/country5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#d5d5d5"
            android:gravity="center"
            android:padding="5dp"
            android:text="国家5"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/country6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#d5d5d5"
            android:gravity="center"
            android:padding="5dp"
            android:text="国家6"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>