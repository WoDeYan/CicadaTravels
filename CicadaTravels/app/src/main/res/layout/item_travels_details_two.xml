<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/travels_photo_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <TextView
        android:layout_below="@id/travels_photo_iv"
        android:text="1111"
        android:id="@+id/travels_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/travels_small_title_iv"
        android:layout_below="@id/travels_description_tv"
        android:src="@mipmap/travels_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/travels_small_title_tv"
        android:textSize="20dp"
        android:text="11"
        android:layout_below="@id/travels_description_tv"
        android:layout_toRightOf="@id/travels_small_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:layout_below="@id/travels_description_tv"
        android:text="11"
        android:id="@+id/travels_comments_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_below="@id/travels_description_tv"
        android:src="@mipmap/travels_love"
        android:layout_toLeftOf="@id/travels_comments_count_tv"
        android:id="@+id/travels_comment_another_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/travels_love_tv"
        android:layout_below="@id/travels_description_tv"
        android:text="3"
        android:textSize="15dp"
        android:layout_toLeftOf="@id/travels_comment_another_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_toLeftOf="@id/travels_love_tv"
        android:layout_below="@id/travels_description_tv"
        android:src="@mipmap/travels_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>